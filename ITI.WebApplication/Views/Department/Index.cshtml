@model IEnumerable<ITI.WebApplication.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex align-items-center justify-content-between">
    <h1>Departments</h1>
    <a asp-action="Create" class="btn btn-primary py-3">Create New</a>
</div>

<table class="table my-5">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary p-1">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary p-1">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger p-1" onclick="return confirm('are you sure do you want to delete this department?')">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>